{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "out/webviews",
    "module": "esnext",
    "target": "es5",
    "lib": ["es2020", "es6", "dom", "esnext.asynciterable"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "webviews/*": ["webviews/*"],
      "src/*": ["src/*"]
    }
  },
  "include": ["webviews", "src/typings"]
}
