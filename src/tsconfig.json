{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "lib": ["es2019", "dom", "es2020"],
    "outDir": "../out",
    "sourceMap": true,
    "strict": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./*"]
    }
  },
  "exclude": ["node_modules", ".vscode-test"]
}
